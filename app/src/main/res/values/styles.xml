<resources>

    <style name = "LightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">#D2CDDB</item>
        <item name = "colorPrimaryDark">#E64A19</item>
        <item name = "colorAccent">#D32F2F</item>
<!--        <color name = "lightActivityBackground">#FFFFFF</color>-->
    </style>


    <style name = "DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">#353333</item>
        <item name = "colorPrimaryDark">#4A148C</item>
        <item name = "colorAccent">#66BB6A</item>
    </style>


    <style name = "MainStyle">
        <item name = "android:layout_centerHorizontal">true</item>
        <item name = "android:fontFamily">@font/cuprum_bold</item>
        <item name = "android:textSize">30sp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:padding">15dp</item>
    </style>


    <style name = "GeneralLayoutStyle">
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:background">@color/darkActivityBackground</item>
    </style>


    <style name = "PrimaryLayoutStyle" parent = "GeneralLayoutStyle">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>

    </style>


    <style name = "SecondaryLayoutStyle" parent = "GeneralLayoutStyle">
        <item name ="android:visibility">invisible</item>
    </style>


    <style name = "TextViewPrimary">
        <item name = "android:fontFamily">@font/cuprum_bold</item>
        <item name = "android:textSize">30sp</item>
        <tem name = "android:layout_height">wrap_content</tem>
        <item name = "android:layout_width">wrap_content</item>
    </style>


    <style name = "EditTextPrimary" parent = "MainStyle">
        <item name = "android:layout_margin">25dp</item>
        <item name = "android:ems">10</item>
        <item name = "android:background">@color/editTextWrong</item>
        <item name = "android:maxLength">45</item>
    </style>


    <style name= "ButtonPrimary" parent= "MainStyle">
        <item name = "android:background">@drawable/login_button</item>
        <item name = "android:layout_height">100dp</item>
        <item name = "android:layout_width">150dp</item>
        <item name = "android:textColor">@color/buttonText</item>
        <item name = "android:layout_marginTop">25dp</item>
    </style>


    <style name = "ProgressBar" parent = "@android:style/Widget.ProgressBar.Large">
        <item name = "android:layout_width">150dp</item>
        <item name = "android:layout_height">150dp</item>
        <item name = "android:animationResolution">1</item>
        <item name= "android:indeterminate">true</item>
<!--        <item name= "android:indeterminateTintMode">src_atop</item>-->
<!--        <item name = "android:indeterminateTint">@color/colorPrimaryDark</item>-->
        <item name = "android:layout_centerHorizontal">true</item>
    </style>

</resources>
