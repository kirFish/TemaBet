<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--All the elements on the first screen-->
    <style name="LoginMainStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/cuprum_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- EditText on the first activity-->
    <style name ="loginElementPrimary" parent = "LoginMainStyle">
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
<!--        <item name="android:cacheColorHint">@color/editTextWrong</item>-->
    </style>

    <!-- TextViews and Button on the first screen-->
    <style name="LoginElementSecondary" parent = "loginElementPrimary">
<!--        <item name="android:textStyle">italic</item>-->
    </style>





</resources>
