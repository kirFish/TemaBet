<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kirichripper.entertainment.temabet.activity.BetDetails">

    <RelativeLayout
        android:id="@+id/mainLoginLayout"
        style="@style/PrimaryLayoutStyle"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/editText2"
            style="@style/editTextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@id/editText"

            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/editText"
            style="@style/editTextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@id/hui"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            style="@style/MainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:textColor="@color/colorPrimary"
            android:text="TextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hui"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/textView"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"


            android:background="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            style="@style/MainStyle"
            android:id="@+id/textView3"
            android:layout_below="@id/hui"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horse#" />

        <TextView
            style="@style/MainStyle"
            android:id="@+id/textView2"
            android:layout_below="@id/textView3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount in hryvnia" />

        <Button
            style="@style/buttonPrimary"
            android:layout_below="@id/editText2"

            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondaryLoginLayout"
        style="@style/SecondaryLayoutStyle"
        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/ProgressBar"
            android:layout_marginTop="200dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>