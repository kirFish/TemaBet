<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login">

    <RelativeLayout
        android:id="@+id/mainLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/loginLabel"
            style="@style/LoginElementSecondary"
            android:text="@string/login" />

        <EditText
            android:id="@+id/inputLogin"
            style="@style/loginElementPrimary"
            android:layout_below="@id/loginLabel"
            android:ems="10"
            android:hint="@string/login_hint"
            android:inputType="text"
            android:maxLength="45" />

        <TextView
            android:id="@+id/passwordLabel"
            style="@style/LoginElementSecondary"
            android:layout_below="@id/inputLogin"
            android:layout_marginTop="2dp"
            android:text="@string/passwordLabel" />

        <EditText
            android:id="@+id/inputPassword"
            style="@style/loginElementPrimary"
            android:layout_below="@id/passwordLabel"
            android:hint="@string/password_hint"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signInButton"
            style="@style/LoginElementSecondary"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/inputPassword"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_button"
            android:text="@string/buttonLabel"
            android:textColor="@color/buttonText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondaryLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>