<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kirichripper.entertainment.temabet.activity.History">

    <ScrollView
        style="@style/PrimaryLayoutStyle"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/primaryRunsLayout"
            style="@style/PrimaryLayoutStyle"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyList"
                android:layout_width="match_parent"

                style="@style/MainStyle"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout

        android:id="@+id/secondaryRunsLayout"
        style="@style/SecondaryLayoutStyle"
        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/runsProgressBar"
            style="@style/ProgressBar"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>